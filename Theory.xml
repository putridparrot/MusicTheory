				<alternative name="Ghana Heptatonic" />
				<alternative name="Peruvian Major" />
				<alternative name="4th Plagal Byzantine" />
				<mode name="Lydian" />
			</step>
			<step value="2">
				<mode name="Mixolydian"/>
			</step>
			<step value="2">
				<alternative name="Natural Minor">
